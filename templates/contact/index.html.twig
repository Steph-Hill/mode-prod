{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div>{% include "includes/_flashes.html.twig" %}
		
	</div>
	<br>
<h1 class="text-center space-top">Contact</h1>
	<div class="container pb-5 pt-2 ">
		<div class="row justify-content-center  m-5 ">
			<div class=" col-lg-6 bg-secondary rounded-4 pt-3 ">

				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6">
						{{ form_row(form.name) }}
						{{ form_row(form.email) }}
					</div>
					<div class="col-md-6">
						{{ form_row(form.phone) }}
						{{ form_row(form.codePostal) }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">

						{{ form_row(form.postalAddress) }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						{{ form_row(form.objet) }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						{{ form_row(form.message) }}
					</div>
				</div>
				{{ form_end(form) }}

			</div>
		</div>
	</div>


{% endblock %}
