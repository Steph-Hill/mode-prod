{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
	<div class="container space-top">
		<div class="row justify-content-center">
			<div class="col-lg-6">
				{% if form.vars.submitted and form.vars.valid %}

					<div class="d-flex justify-content-center">
						<div class="flex-grow-3 card col-md-8 justify-content-center">
							{{ form_start(form) }}
							<h5 class="text-center">Recherche de Salon d e coiffure</h5>
							<div class="col-md-11 ">
								{{ form_widget(form.query) }}
								{{ form_errors(form.query) }}
							</div>
							<div class="d-flex justify-content-center">
								{{ form_widget(form.submit) }}

							</div>
							{{ form_end(form) }}
							<a href="{{path('search')}}" class="d-flex justify-content-center">
								<button class="btn background-secondary m-3 alert-danger">reset</button>
							</a>
						</div>
					</div>

					<div class="container mt-5">
						<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 p-6 justify-content-center">
							{% for salon in hairSalon %}
								<div class="col mb-4">
									<div class="card p-3">
										<h4 class="card-title text-bg-primary text-xxl-center">{{ salon.name }}</h4>
										<p class="card-text">Code Postal:
											{{ salon.postalAdress }}</p>
										<p class="card-text">Tel:
											{{ salon.phone }}</p>
										<p class="card-text">Nombre employ√©:
											{{ salon.employe }}</p>
										<p class="card-text">Nombre de place:
											{{ salon.chair }}</p>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>

				{% else %}
					<div class="d-flex justify-content-center">
						<div class="flex-grow-3 card col-md-8 justify-content-center">
							{{ form_start(form) }}
							<h5 class="text-center">Recherche de Salon d e coiffure</h5>
							<div class="col-md-11 ">
								{{ form_widget(form.query) }}
								{{ form_errors(form.query) }}
							</div>
							<div class="d-flex justify-content-center">
								{{ form_widget(form.submit) }}

							</div>
							{{ form_end(form) }}
							<a href="{{path('search')}}" class="d-flex justify-content-center">
								<button class="btn background-secondary m-3 alert-danger">reset</button>
							</a>
						</div>
					</div>
				{% endif %}
			</div>
		</div>
	</div>


{% endblock %}
