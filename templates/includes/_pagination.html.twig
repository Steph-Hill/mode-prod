 
 <div class="d-flex justify-content-start">
 <nav aria-label="...">
    <ul class="pagination">
      {% if pagination.currentPageNumber > 1 %}
        <li class="page-item">
          <a class="page-link" href="{{ path('produits', {'page': pagination.currentPageNumber - 1}) }}" aria-label="Previous">&laquo;</a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <span class="page-link" aria-hidden="true">&laquo;</span>
        </li>
      {% endif %}

      {% for page in 1..pagination.pageCount %}
        {% if page == pagination.currentPageNumber %}
          <li class="page-item active" aria-current="page">
            <span class="page-link">{{ page }}</span>
          </li>
        {% else %}
          <li class="page-item">
            <a class="page-link" href="{{ path('produits', {'page': page}) }}">{{ page }}</a>
          </li>
        {% endif %}
      {% endfor %}

      {% if pagination.currentPageNumber < pagination.pageCount %}
        <li class="page-item">
          <a class="page-link" href="{{ path('produits', {'page': pagination.currentPageNumber + 1}) }}" aria-label="Next">&raquo;</a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <span class="page-link" aria-hidden="true">&raquo;</span>
        </li>
      {% endif %}
    </ul>
  </nav>
</div>